---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection, type CollectionEntry } from 'astro:content';
import Card from '../../components/Posts/CardPost/Card.astro';
import SubPagesHeader from '../../layouts/SubPagesHeader.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');

  const paths = posts.map((post) => {
    return {
      params: {
        slug: post.slug,
      },
      props: {
        post,
      },
    };
  });
  return paths;
}
type Props = {
  post: CollectionEntry<'posts'>;
};
const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <div class='header-wrapper'>
    <SubPagesHeader heading='Agata Beauty Blog' />
  </div>
  <article>
    <div class="article-container">
      <Card>
        <h2>{post.data.title}</h2>
        <Image class='image-blog' src={post.data.image} alt={post.data.title} />
        <div class='author-info'>
          Autor: <strong>{post.data.author}</strong> | {
            new Date(post.data.date).toLocaleDateString()
          }
        </div>
        <Content />
        <a class='blog-link' href='/blog'>&larr; Powr√≥t</a>
      </Card>
    </div>
  </article>
</Layout>

<style>
  article {
    /* background-color: var(--second-pink); */
  }
  .article-container {
    padding: 20px;
    max-width: 800px;
    margin: 0 auto;
  }
  h2 {
    margin-top: 50px;
    max-width: 450px;
    color: var(--text-font);
    font-size: clamp(1.9rem, 2vw, 2rem);
  }
  .header-wrapper {
      background-image: linear-gradient(
          hsla(0, 0%, 100%, 0.5),
          hsla(0, 0%, 100%, 0.5)
        ),
        url('/bg-prices2.webp');
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 350px;
      text-transform: uppercase;
    }
  .image-blog {
    border-radius: 7px;
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }
  .blog-link {
    width: fit-content;
    margin-top: 20px;
    padding: 15px 45px;
    color: var(--text-font);
    border-radius: 7px;
    outline: 1px solid var(--logo-color);
    background-color: var(--base-orange);
    transition: 0.3s all ease;
  }
  .blog-link:hover {
    color: var(--bg-white);
    border: none;
    background-color: var(--logo-color);
  }
  .author-info {
    margin: 10px 0;
  }
  @media (min-width: 900px) {
    .image-blog {
      max-width: 70%;
    }
  }
</style>
