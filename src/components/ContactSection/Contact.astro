---
import { Image } from 'astro:assets';
import logo from '../../assets/base-logo-wh.webp';
---

<section id='contact' class='contact-section'>
  <div class='contact-wrapper'>
    <div class='contact-welcome'>
      <h2 class='contact-welcome-header'>Kontakt</h2>
      <p class='contact-welcome-shortcuts'>Na skróty</p>
      <a class='contact-welcome-link' href='#home'>Strona Główna</a>
      <a class='contact-welcome-link' href='price-list.html'>Usługi</a>
      <a class='contact-welcome-link' href='rules.html'>Regulamin salonu</a>
      <a class='contact-welcome-link' href=''>Polityka Prywatności</a>
    </div>
    <div class='contact-logo'>
      <Image class='contact-logo-image' src={logo} alt='logo' />
    </div>

    <div class='map-container'>
      <h3 class='map-container-header'>
        Gdzie nas znajdziesz? <i class='fa-solid fa-location-dot'></i>
      </h3>

      <div class='mapouter'>
        <div class='gmap_canvas'>
          <iframe
            class='gmap-frame'
            id='gmap_canvas'
            src='https://maps.google.com/maps?width=523&height=403&hl=en&q=Marka%20Kota%C5%84skiego%204%20Olsztyn+(Aloha%20Beauty%20Logic)&t=&z=12&ie=UTF8&iwloc=B&output=embed'
            frameborder='0'
            scrolling='no'
            marginheight='0'
            marginwidth='0'
          >
          </iframe>
        </div>
      </div>
    </div>

    <div class='contacts'>
      <div class='contacts-title'>
        <h3 class='contacts-title-header'>Aloha Beauty Logic Clinic</h3>
      </div>
      <div class='contacts-address'>
        <i class='fa-solid fa-map-location'></i> ul. Marka Kotańskiego 4, 11-041
        Olsztyn
      </div>
      <div class='contacts-phone'>
        <a href='tel:+48887545887' class='contacts-phone-link'
          ><i class='fa-solid fa-phone'></i> - 887 545 887</a
        >
      </div>
      <div class='contacts-mail'>
        <i class='fa-solid fa-envelope'></i> agata.ambroziak@wp.pl
      </div>
      <div class='contacts-open-info'>
        <p class='contats-open'>Czynne:</p>
        <p class='contacts-dates'>Pn.-Pt. 09:00 - 17:00</p>
        <p class='contacts-dates'>Sb. 09:00 - 16:00</p>
        <p class='contacts-dates contacts-dates-closed'>Nd. - Nieczynne</p>
      </div>
    </div>

    <div class='media'>
      <h3 class='media-header'>Odwiedź nas w social mediach</h3>
      <div class='media-social'>
        <a
          class='media-social-facebook'
          href='https://www.facebook.com/SalonKosmetykiiKosmetologiiEstetycznej/'
          ><i class='fa-brands fa-square-facebook fa-2x'></i></a
        >
        <a
          class='media-social-instagram'
          href='https://www.instagram.com/p/CoFEx07NS2H/'
        >
          <i class='fa-brands fa-square-instagram fa-2x'></i>
        </a>
        <a
          class='navbar-social-linkedln--link'
          href='https://www.linkedin.com/in/agatabeautylogicclinic/'
          ><i class='fa-brands fa-linkedin fa-2x'></i></a
        >
      </div>
      <div class='media-quote'>
        <p class='media-quote-text'>"You're never</p>
        <p class='media-quote-text'>too OLD to</p>
        <p class='media-quote-text'>become YOUNGER"</p>
        <p class='media-quote-author'>Mae West</p>
      </div>
    </div>
  </div>
  <span class='contact-underline'></span>
</section>

<style>
  .mapouter {
    width: 100%;
    position: relative;
    text-align: center;
    min-height: 340px;
    border: 5px solid var(--medium-pink);
    border-radius: 7px;
  }
  .gmap_canvas {
    width: 100%;
    overflow: hidden;
    background: none !important;
    height: 340px;
  }
  .gmap-frame {
    width: 100%;
    min-height: 340px;
  }

  .contact-section {
    color: var(--bg-white);
    padding: 20px 20px 1px 20px;
    background-image: linear-gradient(
      to top,
      #1c181b,
      #1f1a1e,
      #231b21,
      #261d25,
      #2a1f28
    );
    font-family: var(--main-font);
  }
  .contact-wrapper {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 30px;
    margin-top: 50px;
  }
  .contact-welcome {
    display: flex;
    flex-direction: column;
    order: -2;
    align-items: start;
    width: 100%;
  }
  .contact-welcome-header {
    font-family: var(--main-font);
    text-align: left;
    letter-spacing: 0.5px;
    font-size: clamp(3.2rem, 5vw, 7rem);
    max-width: 230px;
    padding-bottom: 0px;
    border-bottom: 23px solid var(--medium-pink);
    margin-bottom: 50px;
    position: relative;
    gap: 35px;
  }
  .contact-welcome-shortcuts {
    font-size: 1.1rem;
    font-weight: 700;
    margin: 3px;
  }
  .contact-welcome-link {
    text-decoration: none;
    color: rgb(211, 156, 165);
    opacity: 0.8;
    transition: color 0.2s ease-in-out;
    margin: 3px;
  }
  .contact-welcome-link:hover {
    opacity: 1;
  }
  .contact-logo {
    display: none;
  }
  .map-container {
    width: 100%;
  }
  .map-container-header {
    margin-bottom: 15px;
  }
  .fa-location-dot {
    color: #ea4335;
  }
  .fa-map-location,
  .fa-phone {
    margin-left: 0;
  }
  .contacts-mail {
    color: var(--medium-pink);
  }
  .contacts-mail i {
    margin-left: 0;
  }
  .contacts {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    order: -2;
    gap: 20px;
    position: relative;
  }
  .contacts-title {
    font-size: 2.3rem;
    font-family: var(--logo-font);
    margin-bottom: 10px;
    line-height: normal;
  }
  .contacts-title span {
    color: var(--text-font);
    text-transform: uppercase;
  }
  .contacts-title-header {
    color: var(--medium-pink);
  }
  .contacts-address,
  .contacts-phone {
    font-size: 1.1rem;
    font-weight: 700;
  }
  .contacts-phone-link {
    color: var(--medium-pink);
    text-decoration: none;
  }
  .contacts-open-info {
    font-size: 1rem;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }
  .contacts-dates {
    color: rgb(211, 156, 165);
  }
  .media {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: left;
    order: -1;
  }
  .media-social-facebook i {
    margin-left: 0;
  }
  .fa-square-facebook,
  .fa-square-instagram,
  .fa-linkedin {
    color: var(--medium-pink);
    transition: color 0.3s ease;
    margin: 5px;
  }
  .fa-square-facebook:hover,
  .fa-square-instagram:hover,
  .fa-linkedin:hover {
    opacity: 0.8;
  }
  .media-quote {
    display: none;
  }

  @media (min-width: 900px) {
    .mapouter {
      min-height: 440px;
    }
    .gmap_canvas {
      min-height: 440px;
    }
    .gmap-frame {
      min-height: 440px;
    }
    .contact-wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr;
      align-items: center;
      max-height: 800px;
      margin-top: 50px;
      margin-bottom: 30px;
    }
    .contact-welcome {
      grid-column: 2/3;
      grid-row: 1/2;
    }
    .contact-welcome-header {
      margin: 0;
      font-weight: 900;
      padding-bottom: 0px;
      border-bottom: none;
      letter-spacing: 5px;
    }
    .contact-welcome-shortcuts {
      margin-top: 20px;
    }
    .contact-logo {
      display: block;
      width: 400px;
      padding-left: 0px;
    }
    .contact-logo img {
      width: 100%;
      height: auto;
      object-fit: contain;
    }

    .contacts {
      grid-column: 2/-3;
      grid-row: 2/3;
      position: relative;
      order: 0;
    }
    .contacts-phone-link {
      pointer-events: none;
    }
    .media {
      align-self: flex-start;
      grid-column: 3/-2;
      grid-row: 3/2;
      order: 1;
    }
    .media-header {
      font-size: 1.4rem;
      margin-top: 0px;
    }
    .media-quote {
      width: 100%;
      opacity: 0.4;
      font-family: var(--main-font);
      text-transform: uppercase;
      display: block;
      font-size: 2.3rem;
      letter-spacing: 3px;
      font-weight: 600;
      margin-top: 15px;
    }
    .media-quote-author {
      text-transform: none;
      margin-top: 15px;
      font-style: italic;
      font-family: 'Dancing Script', cursive;
      font-size: 2.2rem;
    }
    .map-container {
      grid-column: 1/2;
      grid-row: 1/3;
    }
    .map-container-header {
      text-align: center;
      font-size: 1.4rem;
    }
    .contact-underline {
      margin: 0 auto;
      display: block;
      width: 70%;
      border-bottom: 1px solid var(--medium-pink);
      margin-bottom: 20px;
    }
  }
</style>
