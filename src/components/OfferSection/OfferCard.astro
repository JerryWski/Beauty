<style>
  .offer-container {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    background-color: var(--second-pink);
    justify-content: space-around;
    align-items: center;
    padding: 40px 10px;
    margin-bottom: 50px;
    gap: 50px;
  }
  .offer {
    margin: 5px;
    /* border: 1px solid var(--main-pink); */
    border-radius: 5px;
    background-color: var(--bg-white);
    display: flex;
    text-align: center;
    justify-content: space-around;
    align-items: center;
    flex-direction: column;
    font-family: var(--main-font);
    color: var(--text-font);
    height: 380px;
    outline: 1px solid transparent;
    width: 100%;
    max-width: 360px;
    padding: 20px;
    transform: scale(1);
    transition: all 0.3s linear;
    box-shadow: 8px 10px 31px -5px rgba(177, 178, 202, 1);
  }
  .offer:hover {
    transform: scale(1.03);
  }
  .offer-title {
    padding: 15px;
    text-transform: uppercase;
  }
  .offer-image {
    width: 100%;
    margin-bottom: 20px;
    object-fit: contain;
  }
  .offer-link {
    outline: 1px solid black;
    padding: 8px 20px 8px 15px;
    border-radius: 20px;
    margin-bottom: 10px;
    transition: all 0.3s ease;
  }
  .offer-link:hover {
    outline: 1px solid var(--main-pink);
  }
  .offer-link-text {
    color: var(--text-font);
    padding-right: 10px;
    transition: 0.3s all ease;
  }
  .offer-link:hover span {
    color: var(--main-pink);
  }
  .offer-link-svg {
    width: auto;
    fill: none;
    stroke-linecap: round;
    stroke-linejoin: round;
    stroke: var(--text-font);
    stroke-width: 1;
    transform: translateX(-5px);
    transition: all 0.3s ease;
  }
  .offer-link:hover svg {
    transform: translateX(5px);
    stroke: var(--main-pink);
  }

  @media (min-width: 900px) {
    .offer-container {
      flex-direction: row;
      justify-content: center;
    }
  }
</style>
