---
import OfferCard from './OfferCard.astro';
---

<section id='offers' class='offer-section'>
  <h2 class='offer-header'>Nasze zabiegi</h2>
  <span class='offer-underline'></span>
  <OfferCard />
</section>

<style>
  .offer-section {
    padding: 20px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    background-color: var(--second-pink);
  }
  .offer-header {
    margin-top: 40px;
    margin-bottom: 40px;
    padding: 20px 0 0px 0px;
    font-family: var(--logo-font);
    color: var(--text-font);
    text-align: center;
    letter-spacing: 0.5px;
    font-weight: 700;
    position: relative;
    font-size: clamp(4.2rem, 6vw, 6rem);
  }
  .offer-header::after {
    position: absolute;
    content: '';
    width: 14%;
    height: 100%;
    background-image: url('../../assets/flower2.png');
    background-repeat: no-repeat;
    background-size: contain;
    right: -10px;
    top: -5px;
    opacity: 0.8;
  }
  .offer-underline {
    display: flex;
    height: 2px;
    width: 60%;
    background-color: var(--text-font);
    margin-bottom: 30px;
    opacity: 0.7;
  }
  
</style>
