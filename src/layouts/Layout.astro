---
import Header from '../components/Navigation/Header';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='pl'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Salon urody dla kobiet i mężczyzn. Usługi kosmetyczne, zabiegi, medycyna estetyczna'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css'
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
	<Header client:only="react" />
    <slot />
  </body>
</html>
<script src='https://kit.fontawesome.com/4619b49638.js'></script>
<style is:global>
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    min-height: 100vh;
    scroll-behavior: smooth;
  }
  a {
    text-decoration: none;
  }
</style>
