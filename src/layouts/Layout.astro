---
import Header from '../components/Navigation/Header';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='pl'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Salon urody dla kobiet i mężczyzn. Usługi kosmetyczne, zabiegi, medycyna estetyczna'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link
      href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,400;1,900&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css'
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header client:only='react' />
    <slot />
  </body>
</html>
<script src='https://kit.fontawesome.com/4619b49638.js'></script>

<style is:global>
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    min-height: 200vh;
    scroll-behavior: smooth;
  }
  a {
    text-decoration: none;
  }
  /* main-colors */
  :root {
    --bg-white: hsl(0, 0%, 100%);
    --text-font: #291f27;
    --main-pink: #ed268d;
    --test: #e105ec;
    --second-pink: #f7ecf5;
    --second-tur: #69ccae;
    /* fonts */
    --main-font: 'Noto Sans', sans-serif;
    --logo-font: 'fontaine_regularregular', sans-serif;
    --dance-font: 'Dancing Script', cursive;

  }
  @font-face {
      font-family: 'fontaine_regularregular';
      src:
        url('../../fonts/fontaine_regular-webfont.woff2') format('woff2'),
        url('../../fonts/fontaine_regular-webfont.woff') format('woff');
      font-weight: normal;
      font-style: normal;
    }
</style>
