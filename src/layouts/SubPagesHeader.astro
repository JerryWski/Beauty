---
export interface Props {
  heading?: string;
}

const { heading = 'Welcome' } = Astro.props as Props;
---

<h1>
  {heading}
</h1>

<style>
  h1 {
    color: var(--logo-color);
    font-size: clamp(2.3rem, 4vw, 4.5rem);
    padding: 180px 20px 60px 20px;
    text-align: center;
    font-family: var(--main-font);
  }
  @media (min-width: 900px) {
    h1 {
      padding-top: 60px;
      padding-bottom: 60px;
      color: var(--logo-color);

    }
  }
</style>
